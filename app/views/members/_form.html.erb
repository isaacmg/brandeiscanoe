<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.number_field :phone %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :mailbox %><br>
    <%= f.number_field :mailbox %>
  </div>
  <div class="field">
    <%= f.label :experience %><br>
    <%= f.select :experience, options_for_select(%w[None some extensive]) %>
  </div>
  <div class="dropdown">
    <%= f.label :car %><br>
    <%= f.select :car, options_for_select(%w[Yes no]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
